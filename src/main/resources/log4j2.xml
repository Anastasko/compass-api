<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
 <Appenders>
  <Console name="Console">
   <PatternLayout pattern="%d{ABSOLUTE} [%.3t] %-5level %logger{2} - %msg%n" />
  </Console>

  <Console name="ConsoleSQL">
   <PatternLayout pattern="%d{ABSOLUTE} [%.3t] QUERY %.-47msg ... %.28msg%n" />
  </Console>

